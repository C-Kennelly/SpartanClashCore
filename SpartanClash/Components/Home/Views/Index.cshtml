@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script>
    $(function () {
        $("#srch-companies").autocomplete({
            source: "@Context.Request.Scheme://@Context.Request.Host.ToUriComponent()@Url.Action("CompanyAutocomplete", "Home")",
            position: { my: "left top", at: "left bottom", collision: "none" },
            delay: 0
            });
    });
</script>

<div class="jumbotron">
    <h2>Fight together, Spartan.<br></h2>
    <form asp-controller="ServiceRecord" asp-action="CompanyResults" method="get">
        <div class="input-group add-on">
            <input class="form-control ui-widget" placeholder="Find your Spartan Company" name="company" id="srch-companies" type="text">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    </form>
</div>